<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_dima</name>
    <author>Davidov Dmitry</author>
    <creationDate>September 2013</creationDate>
    <copyright>(C) 2010 - 2013 MindK.</copyright>
    <license>GNU General Public License version 2 or later;</license>
    <authorEmail>hello@mindk.com</authorEmail>
    <authorUrl>www.mindk.com</authorUrl>
    <version>1.0</version>
    <description>COM_DIM_DESCRIPTION</description>
    <install>
        <sql>
            <file charset="utf8" driver="mysql">install.mysql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
        </sql>
    </uninstall>
    <files folder="site">
        <filename>index.html</filename>
    </files>
    <administration>
        <menu>com_dima</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>dima.php</filename>
            <filename>install.mysql.sql</filename>
            <filename>uninstall.mysql.sql</filename>
            <folder>controllers</folder>
            <folder>views</folder>
            <folder>models</folder>
            <folder>tables</folder>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/en-GB.com_dima.ini</language>
            <language tag="en-GB">language/en-GB.com_dima.sys.ini</language>
        </languages>
    </administration>
</extension>